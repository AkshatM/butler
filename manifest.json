{
  "manifest_version": 2,

  "name": "Quora Butler",
  "description": "Lets the butler put in replies",
  "version": "1.0",
  "background": {"page": "background.html"},

  "browser_action": {
    "name": "Quora Butler",
    "default_icon": "images/icon.jpg",
    "default_popup": "popup.html",
    "default_title": "Configure"
  },
  "content_scripts": [ {
    "js": [ "jquery-2.2.0.min.js", "background.js" ],
    "css": ["custom_styles.css"],
    "matches": [ "http://www.quora.com/*", "https://www.quora.com/*"]
  } ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [
    "images/*"
   ]
}
